{
  "env":
  {
    "browser": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "next"
  ],
  "rules": {
    "no-unused-vars": "off", // turn off no-unused-vars rule
    "padding-line-between-statements": [
      "error",
      {
        "blankLine": "always",
        "prev": "import",
        "next": "*"
      },
      {
        "blankLine": "any",
        "prev": "import",
        "next": "import"
      }
    ]
  }
}